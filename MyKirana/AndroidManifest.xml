        <activity
            android:name="com.bigbizsol.mykirana.LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.bigbizsol.mykirana.LoginActivity"
            android:label="@string/app_name" >
            </activity>
             <activity
            android:name="com.bigbizsol.mykirana.GmailLoginActivity"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.bigbizsol.mykirana.SignupActivity"
            android:label="@string/app_name" >
            </activity>
             <activity
            android:name="com.bigbizsol.mykirana.HomeScreen"
            android:label="@string/app_name" >
